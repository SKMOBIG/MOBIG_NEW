    <script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
    <script src="https://www.amcharts.com/lib/3/serial.js"></script>
    <script src="https://www.amcharts.com/lib/3/plugins/export/export.min.js"></script>
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <script src="https://www.amcharts.com/lib/3/themes/light.js"></script>
				
    <script type="text/javascript">
    
    var chartData = generatechartData();
 
    function generatechartData() {
        var chartData = [];
        var visits;

    <% for (var i = 0; i < rslt_list.length; i++) { %>

            var newDate = new Date();

            newDate.setYear(<%=rslt_list[i].settl_pdct_year%>);
            newDate.setMonth(<%=rslt_list[i].settl_pdct_month%>);
            newDate.setDate(0);

            visits = <%=rslt_list[i].settl_pdct_amt%>;

            chartData.push({
                "settl_strd_ym": newDate,
                "settl_amt": visits,
            <%  if(rslt_list[i].settl_data_cl_cd == "RL"){ %>
                "settl_data_cl_cd":"RL",
                "lineColor": "#67b7dc"
                // "negativeLineColor": "#67b7dc",
            <%  }else{ %>    
                "settl_data_cl_cd":"PD",
                "lineColor": "#fdd400"
                // "negativeLineColor": "#fdd400",
            <%  } %>
            });
            
     <% } %>
        return chartData;
    }


    var chart = AmCharts.makeChart("chartdiv", {
        "theme": "light",
        "type": "serial",
        "marginRight": 80,
        "autoMarginOffset": 20,
        "marginTop":20,
        "dataProvider": chartData,
        "color" : "#90969D",
        "valueAxes": [{
            "id": "v1",
            "axisAlpha": 0.1,
            "color": "#90969D"
            // "title": "Settlement"
        }],
        "graphs": [{
           // "useNegativeColorIfDown": true,
            "balloonText": "[[category]]<br><b>정산금액: [[value]]원</b>",
            "bullet": "round",
            "bulletBorderAlpha": 1,
            "bulletBorderColor": "#90969D",
            "hideBulletsCount": 50,
            "lineThickness": 2,
           // "lineColor": "#fdd400",
           //  "negativeLineColor": "#67b7dc",
            "lineColorField": "lineColor",
            "fillAlphas": 0.4,
            "fillColorsField": "lineColor",
            "valueField": "settl_amt"
        }],
        "chartScrollbar": {
            "scrollbarHeight": 5,
            "backgroundAlpha": 0.1,
            "backgroundColor": "#868686",
            "selectedBackgroundColor": "#67b7dc",
            "selectedBackgroundAlpha": 1
        },
        "chartCursor": {
            "valueLineEnabled": true,
            "valueLineBalloonEnabled": true
        },
        "categoryField": "settl_strd_ym",
        "categoryAxis": {
            "parseDates": true,
            "axisAlpha": 0,
            "minHorizontalGap": 60,
            "color" : "#90969D"
        },

        "export": {
            "enabled": true,
             "exportFields": [
                "settl_strd_ym",
                "settl_amt",
                "settl_data_cl_cd"
              ]
            //   ,
            //   "columnNames": {
            //     "settl_strd_ym": "정산기준년월",
            //     "settl_amt": "정산금액",
            //     "settl_data_cl_cd": "예측구분코드"
            //   }
        }
    });

    chart.addListener("dataUpdated", zoomChart);
    //zoomChart();

    function zoomChart() {
        if (chart.zoomToIndexes) {
            chart.zoomToIndexes(45, chartData.length - 1);
        }
    }
        
    </script>
    
